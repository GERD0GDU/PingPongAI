<Window x:Class="PingPongAI.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingPongAI.App"
        mc:Ignorable="d"
        Title="PingPongAI"
        Width="800"
        Height="512"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <ComboBox x:Name="chkPlayer1"
                      Margin="0,0,4,0"
                      Width="150"
                      VerticalAlignment="Center"
                      ItemsSource="{Binding AgentTypeItems}"
                      SelectedItem="{Binding LeftAgentType}">
                <ComboBox.Style>
                    <Style TargetType="ComboBox">
                        <Setter Property="IsEnabled" Value="True" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ComboBox.Style>
            </ComboBox>
            <TextBlock x:Name="txtPlayer1Score" Grid.Row="1" VerticalAlignment="Center" FontWeight="Bold" FontFamily="Consolas" FontSize="22" Foreground="Green">0</TextBlock>

            <Border Margin="2" Height="24" Grid.Column="1" HorizontalAlignment="Left" BorderBrush="Gray" BorderThickness="1" CornerRadius="2">
                <TextBlock x:Name="txtPlayer1UpKey" VerticalAlignment="Center" Padding="4,0" FontFamily="Consolas" TextAlignment="Center" Foreground="Gray">W ⮝</TextBlock>
            </Border>
            <Border Margin="2" Height="24" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" BorderBrush="Gray" BorderThickness="1" CornerRadius="2">
                <TextBlock x:Name="txtPlayer1DownKey" VerticalAlignment="Center" Padding="4,0" FontFamily="Consolas" TextAlignment="Center" Foreground="Gray">S ⮟</TextBlock>
            </Border>

            <Button x:Name="btnStartStop" Grid.Column="2" Click="btnStartStop_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Content" Value="Start" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                <Setter Property="Content" Value="Stop" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <CheckBox
                Grid.Row="1" Grid.Column="2"
                Content="Enable AI Training"
                Foreground="White"
                IsChecked="{Binding IsTrainingEnabled}"
                Margin="4">
                <CheckBox.Style>
                    <Style TargetType="CheckBox">
                        <Setter Property="IsEnabled" Value="True" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </CheckBox.Style>
            </CheckBox>

            <Border Margin="2" Height="24" Grid.Column="3" HorizontalAlignment="Right" BorderBrush="Gray" BorderThickness="1" CornerRadius="2">
                <TextBlock x:Name="txtPlayer2UpKey" VerticalAlignment="Center" Padding="4,0" FontFamily="Consolas" TextAlignment="Center" Foreground="Gray">⮝</TextBlock>
            </Border>
            <Border Margin="2" Height="24" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right" BorderBrush="Gray" BorderThickness="1" CornerRadius="2">
                <TextBlock x:Name="txtPlayer2DownKey" VerticalAlignment="Center" Padding="4,0" FontFamily="Consolas" TextAlignment="Center" Foreground="Gray">⮟</TextBlock>
            </Border>

            <ComboBox x:Name="chkPlayer2" Grid.Column="4"
                  Margin="4,0,0,0"
                  Width="150"
                  VerticalAlignment="Center"
                  ItemsSource="{Binding AgentTypeItems}"
                  SelectedItem="{Binding RightAgentType}">
                <ComboBox.Style>
                    <Style TargetType="ComboBox">
                        <Setter Property="IsEnabled" Value="True" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ComboBox.Style>
            </ComboBox>
            <TextBlock x:Name="txtPlayer2Score" Grid.Row="1" Grid.Column="4" VerticalAlignment="Center" TextAlignment="Right" FontFamily="Consolas" FontWeight="Bold" FontSize="22" Foreground="Green">0</TextBlock>
        </Grid>

        <Viewbox Grid.Row="1" Stretch="Uniform">
            <Border  BorderThickness="2" BorderBrush="Gray">
                <Canvas x:Name="GameCanvas"
                        Width="800"
                        Height="450"
                        Background="Black">

                    <!-- Ball -->
                    <Ellipse x:Name="Ball"
                         Width="16"
                         Height="16"
                         Fill="White"/>

                    <!-- Player 1 Paddle -->
                    <Rectangle x:Name="Paddle1"
                       Width="10"
                       Height="80"
                       Fill="White"
                       Canvas.Left="20"
                       Canvas.Top="185"/>

                    <!-- Player 2 Paddle -->
                    <Rectangle x:Name="Paddle2"
                       Width="10"
                       Height="80"
                       Fill="White"
                       Canvas.Left="770"
                       Canvas.Top="185"/>
                </Canvas>
            </Border>
        </Viewbox>
    </Grid>
</Window>
